<%- include('../partials/header'); -%>

<header>
    <h1>Welcome to Our Hotel</h1>
    <!-- Add navigation links if needed -->
  </header>

  <main>
    <section id="search">
      <h2>Find Your Perfect Accommodation</h2>
      <form action="/search" method="GET">
        <label for="location">Location:</label>
        <input type="text" id="location" name="location" placeholder="Enter location"><br><br>
        
        <label for="checkin">Check-in Date:</label>
        <input type="date" id="checkin" name="checkin"><br><br>
        
        <label for="checkout">Check-out Date:</label>
        <input type="date" id="checkout" name="checkout"><br><br>
        
        <label for="guests">Guests:</label>
        <input type="number" id="guests" name="guests" min="1"><br><br>
        
        <button type="submit">Search</button>
      </form>
    </section>

    <section id="featured-hotels">
      <h2>Featured Hotels</h2>
      <!-- Display featured hotels here -->
    </section>
  </main>


  <%- include('../partials/footer'); -%>